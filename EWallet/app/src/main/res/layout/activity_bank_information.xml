<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".BankInformation">

    <TextView
        android:id="@+id/mytextview"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Card authentication when linking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/mytextview2"
        android:drawableStart="@drawable/ic_baseline_security_24"
        android:drawablePadding="20dp"
        android:text="To make sure the card is still active, NONO will check that your card must have more than 50000 VND (You can use it to pay for services on NONO later)"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mytextview6"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="ENTER ATM CARD INFORMATION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/account"
        android:transitionName="Account number"
        android:hint="Account number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="15pt"
        android:id="@+id/name"
        android:transitionName="Customer first and last name"
        android:hint="Customer first and last name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:textColor="#000000"
        android:id="@+id/keyId"
        android:transitionName="CMND/CCCD/Passport"
        android:hint="CMND/CCCD/Passport"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/mytextview1"
        android:drawableStart="@drawable/ic_baseline_security_24"
        android:drawablePadding="20dp"
        android:text="All customer information is encrypted to secure customer information."
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnContinue1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:transitionName="continue"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>