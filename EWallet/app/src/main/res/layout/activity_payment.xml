<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:orientation="vertical"
    android:padding="20dp">
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outstanding service"
            android:layout_marginVertical="20dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/elecbtn"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:drawableLeft="@drawable/ic_bulb"
                android:text="Electricity"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginHorizontal="20dp"/>

            <Button
                android:id="@+id/waterbtn"
                android:layout_height="80dp"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_water"
                android:text="Water Bill"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginHorizontal="20dp"/>
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new bill"
            android:layout_marginTop="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <Button
                android:layout_height="55dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_location"
                android:text="Payment Area"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/black"/>
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Bill"
            android:layout_marginTop="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <Button
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_scanner"
                android:text="Scanner"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>
        </TableRow>


    </TableLayout>
</LinearLayout>